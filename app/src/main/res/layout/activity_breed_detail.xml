<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BreedDetailActivity"
    android:background="#888">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_breedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_breedOrigin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Origin"
            android:textSize="18dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/tv_breedDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Description"
            android:textColor="#222"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/tv_breedTemperament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Temperament"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/tv_wikipedia_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more_information"
            android:textColor="#123456"
            android:textStyle="bold"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>